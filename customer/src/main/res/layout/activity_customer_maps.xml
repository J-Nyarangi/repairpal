<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CustomerMapsActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <!-- Map fragment -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mechanicDetails"
        android:layout_alignParentTop="true" />

    <!-- TextView to display selected issues -->
    <TextView
        android:id="@+id/selectedIssuesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:background="@drawable/rounded_bg"
        android:padding="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:text="Selected Issues: Battery, Flat Tire" />

    <!-- Mechanic details layout -->
    <LinearLayout
        android:id="@+id/mechanicDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:background="@color/white"
        android:orientation="vertical">

        <!-- Status bar for mechanic searching -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searching for nearest mechanic..."
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Display Mechanic Details -->
        <ImageView
            android:id="@+id/mechProfile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/mecha"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp">

            <TextView
                android:id="@+id/mechName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mechanic Name"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/etaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 minutes away"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="center" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
